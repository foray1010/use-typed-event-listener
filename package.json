{
  "$schema": "https://json.schemastore.org/package",
  "name": "use-typed-event-listener",
  "version": "3.0.0",
  "description": "React Hook for DOM event listeners with TypeScript supported",
  "keywords": [
    "document",
    "event",
    "event-listener",
    "hooks",
    "react",
    "react-hooks",
    "typed",
    "typescript",
    "window"
  ],
  "homepage": "https://github.com/foray1010/use-typed-event-listener",
  "bugs": "https://github.com/foray1010/use-typed-event-listener/issues",
  "repository": "foray1010/use-typed-event-listener",
  "license": "MIT",
  "author": "foray1010",
  "sideEffects": false,
  "exports": {
    "import": "./dist/index.esm.js",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.esm.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "*.md"
  ],
  "scripts": {
    "prebuild": "yarn clean:build",
    "build": "tsc --project tsconfig.build.json && rollup --configPlugin \"babel={ babelHelpers: 'runtime', extensions: ['.js', '.ts'] }\" -c",
    "ci": "npm-run-all -p 'lint:*' 'type:*' && yarn test && yarn build && size-limit",
    "clean:build": "shx rm -rf dist/ build/dts/",
    "eslint": "eslint --ext=cjs,cts,js,mjs,mts,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "postinstall": "husky install",
    "lint": "npm-run-all -p 'lint:*'",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prepublishOnly": "yarn ci",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "postpublish": "pinst --enable",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd",
    "test": "jest",
    "type:check": "tsc",
    "type:coverage": "type-coverage --strict --at-least 100 --detail --ignore-catch"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "use-deep-compare": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@foray1010/babel-preset": "9.0.1",
    "@foray1010/eslint-config": "7.1.0",
    "@foray1010/prettier-config": "7.0.1",
    "@foray1010/remark-preset": "6.0.1",
    "@foray1010/tsconfig": "7.0.1",
    "@rollup/plugin-babel": "5.3.1",
    "@size-limit/preset-small-lib": "7.0.8",
    "@testing-library/react": "13.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "28.1.6",
    "@types/react": "18.0.15",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "ignore-sync": "5.0.1",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "remark-cli": "10.0.1",
    "rollup": "2.77.0",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-terser": "7.0.2",
    "shx": "0.3.4",
    "size-limit": "7.0.8",
    "ts-node": "10.9.1",
    "type-coverage": "2.22.0",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "react": ">=16.14.0",
    "typescript": ">=4.1.2"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.13.0"
  }
}
